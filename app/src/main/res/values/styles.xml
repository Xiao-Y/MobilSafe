<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"/>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 标题信息展示样式 -->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:background">#8866ff00</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- 手机防盗页面-内容信息展示（带图标）样式 -->
    <style name="text_content_pic_style" parent="@style/text_content_style">
        <item name="android:drawableLeft">@android:drawable/star_big_on</item>
    </style>
    <!-- 手机防盗页面-内容信息展示(不带图标)样式 -->
    <style name="text_content_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 下一步按钮样式 -->
    <style name="button_next_style">
        <item name="android:onClick">next</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:text">下一步</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 上一步按钮样式 -->
    <style name="button_prev_style">
        <item name="android:onClick">prev</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:drawableLeft">@mipmap/previous</item>
        <item name="android:text">上一步</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>